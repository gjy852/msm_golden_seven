<div class="page-header">
  <h1> Directors </h1>
</div>

<table class-"table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Bio</th>
      <th>Details</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @director.each do |director| %>
    <tr>
      <td><img src="<%= director.image_url %>" width="100"</td>
      <td><%= director.name %></td>
      <td><%= director.dob %></td>
      <td><%= truncate(director.bio) %></td>
      <td>
        <a href="http://localhost:3000/directors/<%= director.id %>">Show</a>
      </td>
      <td>
        <a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a>
      </td>
          <% end %>
        </tbody>
      </table>
